<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cphandheld.unisonscanner.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/enterPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="10pt"
        android:textColor="@android:color/white"
        android:fontFamily="Lato Regular"
        android:text="ENTER PIN"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="140dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/entry1"
            android:src="@drawable/no_pin" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/entry2"
            android:src="@drawable/no_pin"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/entry3"
            android:src="@drawable/no_pin"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/entry4"
            android:src="@drawable/no_pin"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="180dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/button1"
            android:src="@drawable/button1" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/button2"
            android:src="@drawable/button2"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/button3"
            android:src="@drawable/button3"
            android:layout_marginStart="20dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="265dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/button4"
            android:src="@drawable/button4" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/button5"
            android:src="@drawable/button5"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/button6"
            android:src="@drawable/button6"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="350dp"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/button7"
        android:src="@drawable/button7" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/button8"
        android:src="@drawable/button8"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/button9"
        android:src="@drawable/button9"
        android:layout_marginStart="20dp"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="435dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/button0"
            android:src="@drawable/button0"
            android:layout_marginStart="85dp"/>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/buttonBack"
            android:src="@drawable/delete"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:gravity="center"
        android:layout_marginTop="420dp"
        android:textSize="5pt"
        android:textColor="#88BBDD"
        android:fontFamily="Lato Medium"
        android:text="A Product of CP Handheld"/>

</RelativeLayout>